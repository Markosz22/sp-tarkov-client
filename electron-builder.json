{
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "nsis"
    ],
    "publish": {
      "provider": "github",
      "repo": "sp-tarkov-client",
      "owner": "SchraderR",
      "private": true,
      "protocol": "https",
      "releaseType": "release"
    }
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
