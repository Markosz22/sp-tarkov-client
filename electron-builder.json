{
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "app/assets/icon.ico",
    "target": ["nsis"],
    "publish": {
      "provider": "github",
      "repo": "sp-tarkov-client",
      "owner": "SchraderR",
      "private": true,
      "protocol": "https",
      "releaseType": "release"
    }
  }
}
